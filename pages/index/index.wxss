/**index.wxss**/
.navbar {
  display: flex;
  align-items: center;
  background-color: dodgerblue;
  height: 88rpx;
}
.nav-list {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 100rpx;
}
.nav-item {
  font-size: 30rpx;
  color:  white;
  text-align: center;
  margin-bottom: 10rpx;
  opacity: 0.9;
}
.nav-active {
  height: 2rpx;
  width: 30rpx;
  margin-left: 35rpx;
  background-color: white;
}

.firstnews {
  position: absolute;
  box-sizing: border-box;
  padding-top: 200rpx;
  padding-bottom: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 100%;

  /* height:  300rpx; */
}

.firstnews-title {
  margin-bottom: 14rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: 900;
  color: white;
}

.firstnews-fandt {
  display: flex;
  font-size: 26rpx;
  line-height:36rpx;
  color: white;
  opacity: 0.8;
}
.firstnews-from {
  margin-right: 30rpx;
}

.firstnews-tag {
  position: absolute;
  right: 10rpx;
  top: 0rpx;
  width:  100rpx;
  height:  50rpx;
  background-color: rgba(255, 0, 0, 0.3);
  text-align: center;
  align-content: center;
  font-size: 26rpx;
  font-weight: 700;
  line-height: 36rpx;
  color: white;

}

.firstnews-pic {
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height: 360rpx;
  z-index: -1;
}


.news {
  position: absolute;
}
.news title {
  position: absolute;
}