<!--index.wxml-->
<view class='navbar'>
  <view class="nav-list" wx:for="{{forecast}}">
    <view class='nav-item'>{{item}}</view>
    <view class='nav-active'> </view>
  </view>
</view>
<view class="firstnews" bindtap='onTapNews'>
  <view class="firstnews-haveaborder"></view>
    <view class="firstnews-title">{{ firstnewsTitle }}</view>
    <view class="firstnews-f-and-t">
      <view class="firstnews-from">{{ firstnewsSource }}</view>
      <view class="firstnews-time">{{ firstnewsTime }}</view>
    </view>
    <view class="firstnews-tag">热门</view>
  <image class="firstnews-pic" src='{{ firstnewsImage }}' mode = "scaleToFill"></image>
</view>

<view wx:for="{{news}}" class="news-list" bindtap='onTapNews'>
  <view class="news-outline">
    <view class="news-title">{{item.title}}</view>
    <view class="news-attribute">
      <view class="news-from">{{item.source}}</view>
      <view class="news-time">{{item.time}}</view>
    </view>
  </view>
  <image class="news-pic" src="{{item.firstImage}}"></image>
</view>